{
    "options": {
        "env": {
            "PATH": "${env:HOME}/zephyrproject/.venv/bin:${env:PATH}",
            "ZEPHYR_BASE": "${env:HOME}/zephyrproject/zephyr",
            "ZEPHYR_SDK_INSTALL_DIR": "${env:HOME}/zephyr-sdk"
        }
    },
    "presentation": {
        "clear": true,
        "echo": true,
        "focus": false,
        "panel": "shared",
        "reveal": "always",
        "revealProblems": "onProblem",
        "showReuseMessage": false
    },
    "problemMatcher": [],
    "tasks": [
        {
            "command": "${env:SHELL}",
            "isBackground": true,
            "label": "zephyr: terminal",
            "presentation": {
                "clear": false,
                "echo": false,
                "focus": true,
                "panel": "dedicated",
                "reveal": "always",
                "showReuseMessage": false
            },
            "problemMatcher": [],
            "runOptions": {
                "instanceLimit": 16
            },
            "type": "shell"
        },
        {
            "command": "build",
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "label": "zephyr: build",
            "problemMatcher": {
                "fileLocation": [
                    "absolute"
                ],
                "owner": "cpp",
                "pattern": {
                    "column": 3,
                    "file": 1,
                    "line": 2,
                    "message": 5,
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "severity": 4
                },
                "source": "cmake"
            },
            "type": "cmake"
        },
        {
            "command": "build",
            "label": "zephyr: guiconfig",
            "targets": [
                "guiconfig"
            ],
            "type": "cmake"
        },
        {
            "command": "build",
            "label": "zephyr: flash",
            "problemMatcher": [],
            "targets": [
                "flash"
            ],
            "type": "cmake"
        },
        {
            "args": [
                "espressif",
                "monitor"
            ],
            "command": "west",
            "label": "zephyr: espressif monitor",
            "presentation": {
                "focus": true
            },
            "problemMatcher": [],
            "type": "shell"
        }
    ],
    "version": "2.0.0"
}
