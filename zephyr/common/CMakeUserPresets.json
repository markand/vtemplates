{
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28
    },
    "configurePresets": [
        {
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "BOARD": "@BOARD@"
            },
            "environment": {
                "PATH": "$env{HOME}/zephyrproject/.venv/bin:$penv{PATH}",
                "ZEPHYR_BASE": "$env{HOME}/zephyrproject/zephyr",
                "ZEPHYR_SDK_INSTALL_DIR": "$env{HOME}/zephyr-sdk"
            },
            "name": "Zephyr"
        }
    ],
    "version": 10
}
